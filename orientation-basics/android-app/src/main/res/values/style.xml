<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorOnPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="backgroundColor">@color/colorPrimaryVariant</item>
        <item name="background">@color/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorControlNormal">@color/colorOnPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
    </style>

</resources>